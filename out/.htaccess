RewriteEngine On

# Specific rule for reset-password (try multiple approaches)
RewriteRule ^reset-password/?$ /reset-password.html [L]
RewriteRule ^reset-password/index\.html$ /reset-password.html [L]
RewriteRule ^success/?$  /success/index.html [L]

RewriteRule ^failed/?$  /failed/index.html [L]

# Handle other static routes - try directory first, then .html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ /$1/index.html [L]

# If directory approach fails, try .html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ /$1.html [L]

# Fallback to main index
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]