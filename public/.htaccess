RewriteEngine On

# Specific rules for required pages
RewriteRule ^reset-password/?$ /reset-password.html [L]
RewriteRule ^reset-password/index\.html$ /reset-password.html [L]
RewriteRule ^privacy-policy/?$ /privacy-policy.html [L]
RewriteRule ^privacy-policy/index\.html$ /privacy-policy.html [L]
RewriteRule ^success/?$ /success.html [L]
RewriteRule ^success/index\.html$ /success.html [L]
RewriteRule ^failed/?$ /failed.html [L]
RewriteRule ^failed/index\.html$ /failed.html [L]
RewriteRule ^shipping-policies/?$ /shipping-policies.html [L]
RewriteRule ^shipping-policies/index\.html$ /shipping-policies.html [L]
RewriteRule ^contact/?$ /contact.html [L]
RewriteRule ^contact/index\.html$ /contact.html [L]
RewriteRule ^refund-policy/?$ /refund-policy.html [L]
RewriteRule ^refund-policy/index\.html$ /refund-policy.html [L]
RewriteRule ^terms-conditions/?$ /terms-conditions.html [L]
RewriteRule ^terms-conditions/index\.html$ /terms-conditions.html [L]

# Handle other static routes - try directory first, then .html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ /$1/index.html [L]

# If directory approach fails, try .html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ /$1.html [L]

# Fallback to main index
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]